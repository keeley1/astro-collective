<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>search rockets</title>
    <link rel="stylesheet" type="text/css" href="main.css" />
</head>
<body>
    <% if (appState === 'loggedin') { %>
        <p><a href="logout" id="sign-up">log out</a></p>
    <% } else { %>
        <p><a href="register" id="sign-up">sign up</a></p>
    <% } %>
    
    <div class="navbar">
        <div class="navbar-container">
            <div class="navbar-item-one">
                <h1><a href="/" id="app-title"><%=appName%></a></h1>
            </div>
            <div class="navbar-item-two">
                <p><a href="astronauts" class="navbar-astro">astronauts</a></p>
            </div>
            <div class="navbar-item-two">
                <p><a href="missions" class="navbar-astro">missions</a></p>
            </div>
            <div class="navbar-item-two">
                <p><a href="spacecraft" class="navbar-astro <%= currentPage === 'rockets' ? 'active' : '' %>">rockets</a></p>
            </div>
            <div class="navbar-item-two">
                <p><a href="about" class="navbar-astro">about</a></p>
            </div>
        </div>
    </div>

    <form action="/searchrockets" method="GET" class="search-form">
        <input id="search-box" class="search-bar" type="text" name="searchbox" placeholder="search rockets">
        <input type="submit" value="Search" class="search-button">
    </form>

    <p><a href="/rockets" class="search-data-back"><</a></p>

    <% if (searchResult.length > 0) { %>
        <div class="data-container">
            <% searchResult.forEach(function(rocket) { %>
                <div class="data">
                    <a href="rocket/<%= rocket.rocket_id %>">
                        <h3 class="data-title"><%= rocket.rocket_name %></h3>
                        <img src="<%= rocket.rocket_photo %>" alt="<%= rocket.rocket_name %>" class="rocket-photo">
                        <div class="data-text-style">
                            <p class="extra-data"><%= rocket.rocket_status %></p>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="data-unavailable">No matching rockets</p>
    <% } %>

</body>
</html>