<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>astronauts</title>
    <link rel="stylesheet"  type="text/css" href="main.css" />
</head>
<body>
    <h1><a href="/" id="app-title"><%=appName%></a></h1>
    <p><a href="register" id="sign-up">sign up</a></p>

    <div class="add-astro-position">
        <p><a href="addastronaut" class="add-astro"> <iconify-icon icon="ph:pencil"></iconify-icon> Add astronaut</a></p>
    </div>

    <% if (allAstronauts.length > 0) { %>
        <ul>
            <div class="astronaut-container">
                <% allAstronauts.forEach(function(astronaut) { %>
                    <div class="astronaut">
                        <a href="astronaut/<%= astronaut.astronaut_id %>">
                            <li class="astro-list">
                                <h3 class="astronaut-title"><%= astronaut.astronaut_name %></h3>
                                <img src="<%= astronaut.astronaut_photo %>" alt="<%= astronaut.astronaut_name %>" class="astronaut-photo">
                                <div class="astronaut-text-style">
                                    <p class="astronaut-data"><%= astronaut.country %></p>
                                    <p class="astronaut-data"><%= astronaut.hours_in_space %> hours in space</p>
                                </div>
                            </li>
                        </a>
                    </div>
                  <% }); %>
            </div>
        </ul>
      <% } else { %>
        <p>No astronauts available.</p>
      <% } %>

      <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</body>
</html>